@model IEnumerable<WebApplication22.Models.viewmodel>
@{
    ViewBag.Title = "MTRequests";
    Layout = "~/Views/Shared/_CustomerProfile.cshtml";
}
<div class="divallinCustomerProfile">
    <div class="CustomerOptions">
        @Html.ActionLink("Requests", "MTRequests", "CustomerProfile", new { data = TempData["status"] }, new { @class = "MTRequests active" })
        @Html.ActionLink("Current Projects", "MTCurrentProjects", "CustomerProfile", null, new { @class = "MTCurrentProjects" })
        @Html.ActionLink("Qulifications", "MTQualifications", "CustomerProfile", null, new { @class = "MTQualifications" })
        @Html.ActionLink("History", "MTHistory", "CustomerProfile", null, new { @class = "MTHistory " })
        </div>
            <div class="MTRequestsTable">

               
                    @foreach (var i in Model)
                    {
                        
                    <div class="homeprojectdiv">

                        @Reuseable.Posts("../../userimages/" + @i.u.photo, @i.p.projectname, @i.u.firstname, @i.p.describtion)
                        <label>@i.d.request</label>
                        <label>@i.u.Email</label>
                        @Html.ActionLink("Accept", "Acceptrequest", new { id = @i.d.id, pid = @i.p.projectid }, new { @class = "MTAcceptProject" })
                        @Html.ActionLink("Refuse", "Refuserequest", new { id = @i.d.id }, new { @class = "MTRefuseProject" })

                    </div>
                       


                        

                    }
                


            </div>
        </div>

